<div class="d-flex justify-content-between">

<h3>Cursos</h3>
<div><a href="/major/create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i></a></div>
</div>



<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col" style="vertical-align: middle">Sigla</th>
      <th scope="col" style="vertical-align: middle">Nome</th>
      <th scope="col" style="text-align: right">Opções</th>
    </tr>
  </thead>
  <tbody>
    {{#each majors}}
        <tr>
            <th scope="row" style="vertical-align: middle">{{code}}</th>
            <td style="vertical-align: middle">{{name}}</td>
            <td style="text-align: right">
                <a href="/major/read/{{id}}" class="btn btn-info" style="color:white"> <i class="bi bi-eye"></i> Ver</a>
                <a href="/major/update/{{id}}" class="btn btn-warning" style="color:white"> <i class="bi bi-pencil-square"></i> Editar</a>
                <a href="/major/remove/{{id}}" class="btn btn-danger" style="color:white"> <i class="bi bi-trash"></i> Remover</a>
            </td>
        </tr>
    {{/each}} 
    </tbody>
</table>